{
  "surah_number": 87,
  "ayahs": [
    {
      "ayah_number": 1,
      "translation_tl": "Magluwalhati ka sa ngalan ng Panginoon mo, ang Pinakamataas,",
      "footnotes": null
    },
    {
      "ayah_number": 2,
      "translation_tl": "na lumikha saka humubog,",
      "footnotes": null
    },
    {
      "ayah_number": 3,
      "translation_tl": "na nagtakda saka nagpatnubay,",
      "footnotes": null
    },
    {
      "ayah_number": 4,
      "translation_tl": "na nagpalabas ng pastulan,",
      "footnotes": null
    },
    {
      "ayah_number": 5,
      "translation_tl": "saka gumawa Siya rito na yagit na nangingitim.",
      "footnotes": null
    },
    {
      "ayah_number": 6,
      "translation_tl": "Magpapabigkas Kami sa iyo[1] kaya hindi ka makalilimot,",
      "footnotes": "[1] ng Qur’an, O Propeta Muhammad"
    },
    {
      "ayah_number": 7,
      "translation_tl": "maliban sa niloob ni Allāh. Tunay na Siya ay nakaaalam sa lantad at anumang nagkukubli.",
      "footnotes": null
    },
    {
      "ayah_number": 8,
      "translation_tl": "Magpapadali Kami sa iyo para sa pinakamadali.",
      "footnotes": null
    },
    {
      "ayah_number": 9,
      "translation_tl": "Kaya magpaalaala ka kung mapakikinabangan ang paalaala.",
      "footnotes": null
    },
    {
      "ayah_number": 10,
      "translation_tl": "Magsasaalaala ang sinumang natatakot [kay Allāh]",
      "footnotes": null
    },
    {
      "ayah_number": 11,
      "translation_tl": "at umiiwas dito ang pinakamalumbay,",
      "footnotes": null
    },
    {
      "ayah_number": 12,
      "translation_tl": "na masusunog sa Apoy na pinakamalaki.",
      "footnotes": null
    },
    {
      "ayah_number": 13,
      "translation_tl": "Pagkatapos hindi siya mamamatay roon at hindi mabubuhay.",
      "footnotes": null
    },
    {
      "ayah_number": 14,
      "translation_tl": "Nagtagumpay nga ang sinumang nagpakabusilak [mula sa kasamaan]",
      "footnotes": null
    },
    {
      "ayah_number": 15,
      "translation_tl": "at bumanggit sa ngalan ng Panginoon niya saka nagdasal.",
      "footnotes": null
    },
    {
      "ayah_number": 16,
      "translation_tl": "Bagkus nagtatangi kayo ng buhay na pangmundo",
      "footnotes": null
    },
    {
      "ayah_number": 17,
      "translation_tl": "samantalang ang Kabilang-buhay ay higit na mabuti at higit na nananatili.",
      "footnotes": null
    },
    {
      "ayah_number": 18,
      "translation_tl": "Tunay na ito ay talagang nasa mga unang kalatas,",
      "footnotes": null
    },
    {
      "ayah_number": 19,
      "translation_tl": "na mga kalatas nina Abraham at Moises.",
      "footnotes": null
    }
  ]
}